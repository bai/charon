<% if @logout %>
  <% settings.client_sites.each do |site_url| %>
    <iframe src="<%= site_url %>/cas_logout" style="display:none"></iframe>
  <% end %>
<% end %>

<% if flash.has?(:error) %>
  <p><%= flash[:error]%></p>
<% end %>
<% if flash.has?(:notice) %>
<p><%= flash[:notice]%></p>
<% end %>

<h1>Login</h1>

<form action="/login" method="post" class="form login">
  <div class="field">
    <input id="username" name="username" type="text" placeholder="Username">
  </div>
  <div class="field">
    <input id="password" name="password" type="password" placeholder="Password">
  </div>
  <input name="lt" type="hidden" value="<%= @login_ticket.ticket %>">
  <input name="warn" type="hidden">
  <% if @service_url %>
    <input name="service" type="hidden" value="<%= @service_url %>">
  <% end %>
  <div class="actions">
    <input type="submit" value="Login">
  </div>
</form>
