<% if @logout %>
  <% settings.client_sites.each do |site_url| %>
    <iframe src="<%= site_url %>/cas_logout" style="display:none"></iframe>
  <% end %>
<% end %>

<% if flash.has?(:error) %>
  <div class="flash error"><p><%= flash[:error]%></p></div>
<% end %>
<% if flash.has?(:notice) %>
  <div class="flash notice"><p><%= flash[:notice]%></p></div>
<% end %>

<h1><%= t("login_header") %></h1>

<form action="/login" method="post" class="form login">
  <div class="field">
    <input id="username" name="username" type="text" placeholder="<%= t("username") %>">
  </div>
  <div class="field">
    <input id="password" name="password" type="password" placeholder="<%= t("password") %>">
  </div>
  <input name="lt" type="hidden" value="<%= @login_ticket.ticket %>">
  <input name="warn" type="hidden">
  <% if @service_url %>
    <input name="service" type="hidden" value="<%= @service_url %>">
  <% end %>
  <div class="actions">
    <input type="submit" value="<%= t("login_button") %>">
  </div>
</form>
